<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShsActivity">


        <TextView
            android:id="@+id/txt_hardwareName"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_findHardware"
            android:onClick="onFindHwClicked"
            android:layout_below="@+id/txt_hardwareName"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="@string/find_hardware"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:textSize="20dp"
            android:textColor="@color/colorWhite" />


        <Button
            android:id="@+id/btn_showInterface"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/btn_findHardware"
            android:text="@string/show_interface"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:onClick="chooseInterfaceType"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"/>


        <Button
            android:id="@+id/btn_disconnectHW"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_below="@+id/btn_showInterface"
            android:text="@string/disconnect_hardware"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:onClick="onDisconnectClicked"
            android:textSize="20dp"
            android:textColor="@color/colorWhite" />

</RelativeLayout>
